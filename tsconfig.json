{
  "compilerOptions": {
    "module": "commonJS",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "lib": [
      "es5",
      "dom"
    ]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "types": [
    "node"
  ],
  "exclude": [
    "node_modules",
    "postgres-data"
  ]
}
